# =============================================================================
# DevOps Tool - Environment Configuration
# =============================================================================
# Copy this file to .env and update with your actual values
# Do NOT commit .env file to version control

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL database credentials for the main application database
POSTGRES_USER=devops
POSTGRES_PASSWORD=devops
POSTGRES_DB=devops_tool
DATABASE_URL=postgresql://devops:devops@db:5432/devops_tool

# =============================================================================
# Flask Configuration
# =============================================================================
# SECRET_KEY: Used for session management and encryption (change in production!)
# FLASK_ENV: Set to 'production' for production deployment
SECRET_KEY=dev-secret-key-change-in-production
FLASK_ENV=production

# =============================================================================
# OAuth - Bitbucket
# =============================================================================
# Create OAuth app at: https://bitbucket.org/[workspace]/workspace/settings/oauth-consumers
# Callback URL should match your deployment domain
BITBUCKET_CLIENT_ID=your-bitbucket-client-id
BITBUCKET_CLIENT_SECRET=your-bitbucket-client-secret
BITBUCKET_CALLBACK_URL=http://launchpad.crl.to/api/auth/bitbucket/callback

# =============================================================================
# OAuth - GitHub
# =============================================================================
# Create OAuth app at: https://github.com/settings/developers
# Authorization callback URL should match your deployment domain
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://launchpad.crl.to/api/auth/github/callback

# =============================================================================
# API Keys
# =============================================================================
# GEMINI_API_KEY: Required for AI-powered pipeline generation
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key

# =============================================================================
# Domain Configuration
# =============================================================================
# ROOT_DOMAIN: Base domain for the application (e.g., example.com)
# FRONTEND_URL: Full URL where the frontend is accessible (http/https)
ROOT_DOMAIN=crl.to
FRONTEND_URL=http://launchpad.crl.to

# =============================================================================
# Redis Configuration
# =============================================================================
# Redis URL for Celery task queue and caching
REDIS_URL=redis://redis:6379/0

# =============================================================================
# Coolify Configuration
# =============================================================================
# Coolify integration for deployment management
# COOLIFY_BASE_URL: Internal URL for backend to communicate with Coolify service
# COOLIFY_API_TOKEN: Generate this from Coolify dashboard -> Security -> API Tokens
# COOLIFY_AUTO_CLEANUP_HOURS: Age in hours before test deployments are auto-deleted
# COOLIFY_DB_PASSWORD: PostgreSQL password for Coolify's database
# COOLIFY_URL: External URL where Coolify is accessible
# COOLIFY_APP_KEY: Application key for Coolify (generate with: openssl rand -base64 32)
COOLIFY_BASE_URL=http://coolify
COOLIFY_API_TOKEN=your-coolify-api-token-here
COOLIFY_AUTO_CLEANUP_HOURS=24
COOLIFY_DB_PASSWORD=coolify
COOLIFY_URL=http://localhost:9000
COOLIFY_APP_KEY=base64:random-key-change-in-production

# =============================================================================
# React App Configuration
# =============================================================================
# REACT_APP_API_URL: Backend API URL that the frontend will use
# This should point to the backend through nginx proxy
REACT_APP_API_URL=http://launchpad.crl.to/api

